                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/web.SchemaResponse"
                        }
                    }
                }
            }
        },
        "/schemas/{name}": {
            "get": {
                "description": "Returns a schema from the loaded set",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "schemas"
                ],
                "summary": "Get JSON Schema by name",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Schema Name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Schema not found",
