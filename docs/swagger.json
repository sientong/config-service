                    "type": "object",
                    "additionalProperties": true
                }
            }
        },
        "web.SchemaResponse": {
            "type": "object",
            "properties": {
                "directory": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                }
            }
        },
        "web.WebResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "data": {},
                "status": {
                    "type": "string"
                }
            }
        }
    }
}